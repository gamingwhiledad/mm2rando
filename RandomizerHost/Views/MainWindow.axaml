                        <Label FontSize="18">🎲</Label>

                        <!-- Toggle to randomize the option -->
                        <ToggleSwitch
                            Name="ToggleSwitch_SpecialWeaponBehavior"
                            IsChecked="{Binding Path=AppConfigurationSettings.RandomlyChooseSetting_EnableRandomizationOfSpecialWeaponBehavior}"
                            OffContent=""
                            OnContent=""
                        />

                        <Grid Name="Grid_SpecialWeaponBehavior">
                            <CheckBox
                                Content="Randomize Special Weapon Behavior"
                                IsEnabled="{Binding !#ToggleSwitch_SpecialWeaponBehavior.IsChecked}"
                                IsChecked="{Binding Path=AppConfigurationSettings.EnableRandomizationOfSpecialWeaponBehavior}"
                            />
                        </Grid>
