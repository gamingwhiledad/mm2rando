            <!--
                Quality of Life Patches
            -->
            <TabItem Header="QoL Patches">
                <StackPanel>
                    <StackPanel
                        Orientation="Horizontal"
                    >
                        <!-- Friendly emoji header -->
                        <Label FontSize="18">🎲</Label>

                        <!-- Toggle to randomize the option -->
